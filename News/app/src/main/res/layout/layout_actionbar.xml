<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#aaaaaa"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bar_imageview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/night_biz_news_channel_entry_icon" />

    <TextView
        android:id="@+id/bar_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/bar_imageview"
        android:gravity="center"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/bar_more"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/biz_news_share_more" />
</RelativeLayout>